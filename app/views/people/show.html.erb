<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<p>
	<strong>Phone Numbers</strong><br />
	<% @person.phone_numbers.each do |phone| %>
		<%= phone.number %><%= link_to "Edit", edit_phone_number_path(phone) %>&nbsp; <%= link_to "Delete", phone_number_path(phone), :method =>"delete" %><br />
	<% end %>
</p>

<%= link_to 'Add Phone Number', new_phone_number_path(person_id: @person.id) %>

<ul>
	<strong>Email Addresses</strong>
	<% @person.email_addresses.each do |email| %>
		<li><%= email.address %></li>
	<% end %>
</ul>
<%= link_to 'Add Email Address', new_email_address_path(person_id: @person.id) %>
<br />
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
